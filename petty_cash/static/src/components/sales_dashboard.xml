<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.OwlSalesDashboard" owl="1">
        <div class="row m-2">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col m-0 p-0">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                                <h1 class="text-primary fw-bold" style="text-align: center;">
                                    DASHBOARD
                                </h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <div class="col m-0 p-0">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Monthly Petty Cash Analysis</h3>
                            </div>
                            <ChartRenderer type="'bar'"/>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="col m-0 p-0">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Top 10 Expense</h3>
                            </div>
                            <TopExpenseRenderer/>
                        </div>
                    </div>

                    <div class="col m-0 p-0">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Top 10 User Expense</h3>
                            </div>
                            <UserExpenseRenderer/>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </t>
</templates>